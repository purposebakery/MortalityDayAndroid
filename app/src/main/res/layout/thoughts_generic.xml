<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/thoughts_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:text="Category"/>

    <TextView
        android:id="@+id/thoughts_text"
        android:layout_toRightOf="@+id/thoughts_category"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/thoughts_item_cloud_icon_container"
        android:text="Thought Thought ThoughtThought Thought Thought Thought Thought Thought"/>


</RelativeLayout>