<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/thoughts_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:text="Category"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thoughts_category"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/thoughts_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thought Thought ThoughtThought Thought Thought Thought Thought Thought"/>

        <TextView
            android:id="@+id/thoughts_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Author"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/thoughts_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="10.03.2015"
            android:textSize="12sp"/>


    </LinearLayout>


</RelativeLayout>