<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/prefs_day_title">

        <ListPreference
            android:key="@string/prefs_day_fequency_key"
            android:entries="@array/prefs_day_fequency_entries"
            android:entryValues="@array/prefs_day_fequency_values"
            android:title="@string/prefs_day_fequency"
            android:summary="%s"
            android:defaultValue="ONCE_A_WEEK"/>

        <ListPreference
            android:key="@string/prefs_day_day1_key"
            android:entries="@array/prefs_day_weekdays_entries"
            android:entryValues="@array/prefs_day_weekdays_values"
            android:title="@string/prefs_day_day1"
            android:summary="%s"
            android:defaultValue="SATURDAY"/>

        <ListPreference
            android:key="@string/prefs_day_day2_key"
            android:entries="@array/prefs_day_weekdays_entries"
            android:entryValues="@array/prefs_day_weekdays_values"
            android:title="@string/prefs_day_day2"
            android:summary="%s"
            android:defaultValue="THURSDAY"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/prefs_mortal_title">

        <EditTextPreference
            android:key="@string/prefs_mortal_name_key"
            android:title="@string/prefs_mortal_name"
            android:defaultValue="@string/prefs_mortal_name_default"
            android:summary="%s"/>

        <EditTextPreference
            android:key="@string/prefs_mortal_user_id_key"
            android:title="@string/prefs_mortal_user_id"
            android:enabled="false"
            android:summary="%s"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/prefs_share_title">

        <CheckBoxPreference
            android:key="@string/prefs_share_automatic_key"
            android:title="@string/prefs_share_automatic"/>
    </PreferenceCategory>

</PreferenceScreen>