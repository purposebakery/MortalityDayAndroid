<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/prefs_day_title">

        <CheckBoxPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_notifications_black_24dp"
            android:key="@string/prefs_notify_key"
            android:summary="@string/prefs_notify_summary"
            android:title="@string/prefs_notify" />

        <ListPreference
            android:defaultValue="ONCE_A_WEEK"
            android:entries="@array/prefs_day_fequency_entries"
            android:entryValues="@array/prefs_day_fequency_values"
            android:icon="@drawable/ic_today_black_24dp"
            android:key="@string/prefs_day_fequency_key"
            android:summary="%s"
            android:title="@string/prefs_day_fequency" />

        <ListPreference
            android:defaultValue="7"
            android:entries="@array/prefs_day_weekdays_entries"
            android:entryValues="@array/prefs_day_weekdays_values"
            android:key="@string/prefs_day_day1_key"
            android:summary="%s"
            android:title="@string/prefs_day_day1" />

        <ListPreference
            android:defaultValue="5"
            android:entries="@array/prefs_day_weekdays_entries"
            android:entryValues="@array/prefs_day_weekdays_values"
            android:key="@string/prefs_day_day2_key"
            android:summary="%s"
            android:title="@string/prefs_day_day2" />


    </PreferenceCategory>


</PreferenceScreen>